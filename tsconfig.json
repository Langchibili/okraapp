{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "node16",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@services/*": [
        "src/services/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@tasks/*": [
        "src/tasks/*"
      ]
    },
    "skipLibCheck": true,
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node16"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
